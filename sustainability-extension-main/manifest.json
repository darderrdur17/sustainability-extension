{
  "manifest_version": 3,
  "name": "ðŸŒ± EcoGuard Pro - Sustainability Intelligence",
  "description": "AI-powered sustainability analysis with real-time scoring, carbon tracking, and competitive benchmarking",
  "version": "2.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "history",
    "tabs",
    "notifications",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.google.com/*",
    "https://serpapi.com/*",
    "https://api.carboninterface.com/*",
    "https://sustainabilityapi.com/*",
    "https://api.esg-data.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png", 
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
